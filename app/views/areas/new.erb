<div class= "row">
  <div class="col-sm-6 offset-sm-3">  
    <%= form_with(url: areas_path, scope: :area, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :prefecture, "都道府県から検索" %>
      <%= f.collection_select :prefecture, Area.all, :id, :prefecture, {prompt: "選択してください"}, {class: "form-control"} %>
    </div>
      <%= f.submit "検索", class: "btn btn-primary btn-block"%>
    <% end %>
  </div>
</div>